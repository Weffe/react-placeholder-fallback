{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "alwaysStrict": true,
        "strict": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es6"
        ],
        "noResolve": false,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "docs",
        "config"
    ]
}
